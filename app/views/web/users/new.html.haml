%h1 New user
= form_for @user do |f|
  = render 'shared/errors', object: @user
  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :nickname
    = f.text_field :nickname
  .field
    = f.label :password
    = f.password_field :password
  .field
    = f.label :password_confirmation
    = f.password_field :password_confirmation
  .field
    = f.submit
= link_to 'Back', users_path