%h1 New user
= form_for @user do |f|
  = render 'shared/errors', object: @user
  .field
    = f.label :nickname
    = f.text_field :nickname
  .field
    = f.label :password
    = f.text_field :password
  .field
    = f.label :password_confirmation
    = f.text_field :password_confirmation
= link_to 'Back', users_path